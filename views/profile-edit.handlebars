<div class="max-w-md mx-auto mt-6 bg-white p-6 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold mb-4">Modifier mon profil</h1>
  <form action="/profile/update" method="POST" class="space-y-4">
    <div>
      <label class="block text-gray-500">Nom d'utilisateur</label>
      <input name="username" value="{{user.username}}"
             class="w-full border rounded px-3 py-2 focus:outline-indigo-500" />
    </div>
    <div>
      <label class="block text-gray-500">Nom</label>
      <input name="nom" value="{{user.nom}}"
             class="w-full border rounded px-3 py-2 focus:outline-indigo-500" />
    </div>
    <div>
      <label class="block text-gray-500">Pr√©nom</label>
      <input name="prenom" value="{{user.prenom}}"
             class="w-full border rounded px-3 py-2 focus:outline-indigo-500" />
    </div>
    <div>
      <label class="block text-gray-500">Email</label>
      <input type="email" name="email" value="{{user.email}}"
             class="w-full border rounded px-3 py-2 focus:outline-indigo-500" />
    </div>
    <button type="submit"
            class="w-full bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700 transition">
      Enregistrer
    </button>
  </form>
</div>