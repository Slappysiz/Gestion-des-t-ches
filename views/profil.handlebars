{{!-- success banner --}}
{{#if successMessage}}
  <div class="max-w-md mx-auto mt-6 p-4 bg-green-100 text-green-800 rounded">
    {{successMessage}}
  </div>
{{/if}}
 
<div class="max-w-md mx-auto mt-6 bg-white p-6 rounded-lg shadow-lg">
  <h1 class="text-2xl font-bold mb-4">Mon Profil</h1>
  <ul class="space-y-3">
    <li>
      <span class="block text-gray-500">Nom d'utilisateur</span>
      <span class="block text-gray-900">{{user.username}}</span>
    </li>
    <li>
      <span class="block text-gray-500">Nom</span>
      <span class="block text-gray-900">{{user.nom}}</span>
    </li>
    <li>
      <span class="block text-gray-500">Pr√©nom</span>
